<div data-hook="login" class="card mt-5">
  <div class="card-body">
    <h5><%= Spree.t(:login) %></h5>

    <%= form_for Spree.user_class.new, as: :spree_user, url: spree.admin_create_new_session_path do |f| %>
      <div id="password-credentials">
        <div class="form-group form-floating">
          <%= f.email_field :email, class: 'form-control', tabindex: 1, placeholder: Spree.t(:email) %>
          <%= f.label :email %>
        </div>
        <div class="form-group form-floating">
          <%= f.password_field :password, class: 'form-control', tabindex: 2, placeholder: Spree.t(:password) %>
          <%= f.label :password %>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-check">
              <%= f.check_box :remember_me, class: 'form-check-input', tabindex: 3 %>
              <%= f.label :remember_me, Spree.t(:remember_me), class: 'form-check-label' %>
            </div>
          </div>
          <div class="col-lg-6 text-end">
            <%= link_to Spree.t(:forgot_password), spree.admin_recover_password_path %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit Spree.t(:login), :class => 'btn btn-primary w-100', :tabindex => 4 %>
      </div>
    <% end %>
  </div>
</div>

<div data-hook="login_extras"></div>
